<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="175dp"
    app:cardBackgroundColor="@color/cardbackground2"
    app:cardElevation="8dp"
    android:layout_margin="8dp"
    android:id="@+id/cardfirebasemain"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:id="@+id/eventNamefirebase"
            android:background="@color/cardbackground"
            android:textColor="@color/fourdigit"
            android:text="Event Name goes here"
            android:textSize="20sp"
            />
        <!--android:layout_weight="1"-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_margin="2dp"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/date"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:id="@+id/eventDateFirebase"
                android:padding="8dp"
                android:textStyle="bold"
                />
            <!--android:id="@+id/eventDateMark"-->
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/time"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:id="@+id/eventTimeFirebase"
                android:padding="8dp"
                android:textStyle="bold"
                />
            <!--android:id="@+id/eventTimeMark"-->
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_margin="16dp"
            android:maxLines = "2"
            android:textSize="16sp"
            android:id="@+id/eventSmmaryFirebase"
            android:text = "Hello this is some place holder text feel free to ignore what ever is written here"/>



    </LinearLayout>


</android.support.v7.widget.CardView>
